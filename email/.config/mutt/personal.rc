unmailboxes *

set mbox_type = Maildir
set folder = "$XDG_DATA_HOME/mail/personal"

set spoolfile = "+Inbox"
set record = "+Sent"
set postponed = "+Drafts"

mailboxes "+Inbox" "+Inbox/amazon" "+Inbox/finances" "+Inbox/health"
mailboxes "+Inbox/other" "+Inbox/webcontact" "+Inbox/webservices" 
mailboxes "+Inbox/webmaster" "+Sent" "+Drafts" "+Trash"

set from = `get-pass email/personal email`
set use_from=yes
set sendmail = "msmtp -a personal"

set signature = "XDG_CONFIG_HOME/mutt/sigs/personal.signature"

set pgp_default_key = `get-pass email/personal email`
