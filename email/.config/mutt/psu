set spoolfile = "+Inbox"
set record = "+Sent
set postponed = "+Drafts"
set trash = "+Trash"

mailboxes "+Inbox"
#mailboxes "+Inbox/HR" "+Inbox/Timely Warning" "+Inbox/It Support Tickets"
mailboxes "+Sent" "+Drafts" "+Trash"

set my_smtp_pass = `get-pass email/psu`
