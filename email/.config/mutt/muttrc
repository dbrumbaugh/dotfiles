source $XDG_CONFIG_HOME/mutt/settings.rc
source $XDG_CONFIG_HOME/mutt/colors.rc    
source $XDG_CONFIG_HOME/mutt/keybindings.rc 
source $XDG_CONFIG_HOME/mutt/sidebar.rc
source $XDG_CONFIG_HOME/mutt/gpg.rc

ignore *
unignore from date subject to cc
unignore x-spam-status
unignore x-spam-report

auto_view text/html
alternative_order text/plain text/enriched text/html

set use_from = yes

set new_mail_command="notify-send -i /usr/share/icons/gnome/32x32/status/mail-unread.png -c email 'New Email' '%n new, %u unread.' &"

source "$XDG_CONFIG_HOME/mutt/mailboxes.rc"
