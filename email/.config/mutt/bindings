bind index,pager C noop
bind index s noop

bind index,pager,browser gg first-entry
bind index,pager,browser G last-entry
bind index,pager,browser \Cd half-down
bind index,pager,browser \Cu half-up

bind index N search-opposite

bind index j next-entry
bind index k previous-entry

bind index d delete-message
bind index u undelete-message
bind index L limit
bind index l display-message
bind index,pager R group-reply
bind index,pager H view-raw-message
bind pager h exit

bind pager j next-line
bind pager k previous-line
bind pager gg top
bind pager G bottom

bind pager <up> previous-line
bind pager <down> next-line

bind index,query space tag-entry

macro index,pager R "<shell-escape> systemctl --user start mbsync.service >/dev/null 2>&1 &<enter><enter>"

macro browser h '<change-dir><kill-line>..<enter>' "Go to parent folder"
bind browser l select-entry

