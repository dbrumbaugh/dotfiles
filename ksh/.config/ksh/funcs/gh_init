gh_init() {
    if [[ $# == 1 ]]; then
        repo_name=$1
    else
        repo_name=${PWD##*/}
    fi

    if [[ -d .git ]]; then
        : #pass
    else
        git init
    fi

    git branch -M master
    git remote add origin git@github.com:dbrumbaugh/${repo_name}.git

    git pull origin master 2>/dev/null || gh_initial_commit
}
