pwda() {
    if [[ $PWD = $HOME ]] then; 
        print "~";
    elif [[ $PWD == "/" ]] then;
        print "/";
    else; 
        print ${PWD##*/}; 
    fi;
}

gbranch() {
    if git rev-parse > /dev/null 2>&1; then
        print " ( $(git branch 2> /dev/null | grep '^*' | colrm 1 2))"
    fi
}

PS1=$'\E[1;32m$LOGNAME\E[1;33m@\E[1;32m${HOST}\E[0m:\E[;1;34m$(pwda)\E[;1;35m$(gbranch)\E[;1;31]\E[0m$ '
