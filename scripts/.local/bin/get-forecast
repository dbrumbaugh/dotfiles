#!/usr/bin/env bash

forecast=$(curl https://wttr.in?format="%t+%c+%m" 2> /dev/null)

if [[ $forecast == "" ]]; then
    rm "${XDG_DATA_HOME}"/forecast 2> /dev/null
    notify-send "Weather forecast download failed."
fi

forecast=($forecast)

temp=${forecast[0]//F}
temp=${temp//+}
temp=${temp//Â°}

status=${forecast[1]}
moon=${forecast[2]}

case $moon in
  "ğŸŒ‘")
      moon="ğŸŒ•";;
  "ğŸŒ’")
      moon="ğŸŒ–";;
  "ğŸŒ“")
      moon="ğŸŒ—";;
  "ğŸŒ”")
      moon="ğŸŒ˜";;
  "ğŸŒ•")
      moon="ğŸŒ‘";;
  "ğŸŒ–")
      moon="ğŸŒ’";;
  "ğŸŒ—")
      moon-"ğŸŒ“";;
  "ğŸŒ˜")
      moon="ğŸŒ”";;
esac 

if (( temp < 50 )); then
  temp_pre="^C12^ï‹Š"
elif (( temp < 70 )); then
  temp_pre="^C3^ï‹ˆ"
else
  temp_pre="^C9^ï‹ˆ "
fi
  
printf "%s %s ^C4^%s ^C12^%s" $temp_pre $temp $status $moon > "${XDG_DATA_HOME}"/forecast.txt
