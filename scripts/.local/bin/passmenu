#!/usr/local/bin/ksh93

prefix="$HOME/.local/share/passwords"
password_files=( "$prefix"/**/*.gpg )
password_files=( "${password_files[@]#"$prefix"/}" )
password_files=( "${password_files[@]%.gpg}" )

password=$(printf '%s\n' "${password_files[@]}" | dmenu -c -bw 3 -l 10 "$@")

[[ -n $password ]] || exit
pass show -c "$password"
