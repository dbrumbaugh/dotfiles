#!/usr/local/bin/ksh93

if [[ -f "$HOME/.local/state/vpn" ]]; then
    doas pkill openconnect
    rm "$HOME/.local/state/vpn"
    notify-send "VPN disconnecting"
else
    if get-pass -c "psu-vpn" | doas -n openconnect --protocol=gp --server secure-connect.psu.edu --user=dbr4 --authgroup=Faculty --non-inter --passwd-on-stdin --background 2>&1 >> "$HOME/.local/var/vpn.log"; then
        touch "$HOME/.local/state/vpn"
        notify-send "VPN connected"
    else
        notify-send "VPN connection failed"
    fi
fi
