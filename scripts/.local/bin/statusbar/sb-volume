#!/usr/local/bin/ksh
volume=$(pamixer --get-volume)

if [ $(pamixer --get-mute) = "true" ]; then
    symbol="^C1^ﱝ"
elif [ "$volume" -ge "70" ]; then
    symbol="^C10^墳"
elif [ "$volume" -gt "0" ]; then
    symbol="^C10^奔"
else
    symbol="^C3^婢"
fi

if (( volume >= 100 )); then
    printf "%s%4d\n" $symbol $volume
else
    printf "%s%3d\n" $symbol $volume
fi
