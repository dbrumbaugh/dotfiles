#!/usr/local/bin/ksh93

line=""
if pgrep xss-lock > /dev/null 2>&1; then
    line="^C2^ "
else
    line="^C3^ "
fi

if pgrep picom > /dev/null 2>&1; then
    line="$line ^C2^ "
else
    line="$line ^C1^ "
fi

if [[ -f "$XDG_STATE_HOME/screencasting" ]]; then
    line="$line ^C1^壘"
else
    line="$line ^C7^壘"
fi

printf "%s " $line
